<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cardstates"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:padding="3dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="25dp"
        card_view:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photoGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/temp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/rateGameToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@+id/starToolbar"
        android:fontFamily="@font/productsansmedium"

        android:text="9.7"
        android:textColor="@color/coloryellow"
        android:textSize="12sp" />

    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/starToolbar"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_star"
        app:tint="@color/coloryellow" />


    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cardstates">

        <TextView
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/title"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/productsansmedium"
            android:text="King war" />



        <TextView

            android:textColor="@color/textcolorGrey"
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/productsanslight"
            android:maxLines="2"
            android:text="Game description, Game description, Game description,
            Game description, Game description, Game description, . " />
        <TextView
            android:textColor="@color/textcolorGrey"
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/productsanslight"
            android:maxLines="2"
            android:text="Game description, Game description, Game description,
            Game description, Game description, Game description, . " />

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:background="@color/textcolorGrey"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cardstates"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
</RelativeLayout>